<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpottersDB_FrontEnd.Classes.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout Padding="20">
                <Label Text="Countries"></Label>
                <ScrollView Orientation="Horizontal">
                    <HorizontalStackLayout x:Name="CountryParent" Padding="25" Spacing="20">

                    </HorizontalStackLayout>
                </ScrollView>
                <Button Text="Add a Country" HorizontalOptions="StartAndExpand" x:Name="AddCountry"></Button>
            </VerticalStackLayout>
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
