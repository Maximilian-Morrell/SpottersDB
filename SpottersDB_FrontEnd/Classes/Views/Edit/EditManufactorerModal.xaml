<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Structure="clr-namespace:SpottersDB_FrontEnd.Classes.Structure"
             x:Class="SpottersDB_FrontEnd.Classes.Views.EditManufactorerModal"
             Title="Create Manufactorer">
    
    <Grid MaximumHeightRequest="520" Padding="20" RowSpacing="10" VerticalOptions="StartAndExpand" x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="Name: *"/>
        <Entry Grid.Row="0" Grid.Column="1" x:Name="ManufactorerName" TextChanged="ManufactorerName_TextChanged"/>

        <Label Grid.Row="1" Grid.Column="0" Text="Region: *"/>

        <Button Grid.Row="2" Grid.ColumnSpan="2" Text="Submit" x:Name="Submit"/>
    </Grid>
</ContentPage>